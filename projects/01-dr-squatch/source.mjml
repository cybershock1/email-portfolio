        <mj-image
          src="https://github.com/cybershock1/email-portfolio/blob/main/projects/01-dr-squatch/assets/Certified_B_Corporation_B_Corp_Logo_2022_Black_RGB.png?raw=true"
          alt="Certified B Corporation"
          width="80px"
          padding-top="20px"
        />

        <mj-divider
          border-width="1px"
          border-color="#E0E0E0"
