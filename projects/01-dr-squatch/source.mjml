<mjml>
  <mj-head>
    <mj-title>Dr. Squatch Mystery Discount</mj-title>
    <mj-attributes>
      <mj-all font-family="Arial, sans-serif" />
      <mj-text font-size="16px" line-height="24px" color="#000000" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#ffffff">
    <!-- HERO SECTION -->
    <mj-section background-color="#1E392A" padding="20px 0">
      <mj-column>
        <mj-image
          src="https://github.com/cybershock1/email-portfolio/blob/main/projects/01-dr-squatch/assets/white.png?raw=true"
          alt="Dr. Squatch Logo"
          width="150px"
          padding-bottom="30px"
        />

        <mj-text
          align="center"
          color="#E2D7C2"
          font-size="14px"
          letter-spacing="1px"
        >
          WE KNOW YOU WANT IT
        </mj-text>

        <mj-text
          align="center"
          color="#FFFFFF"
          font-size="38px"
          font-weight="bold"
          line-height="44px"
          padding-top="10px"
        >
          SO HERE'S A<br />MYSTERY DISCOUNT
        </mj-text>

        <mj-text
          align="center"
          color="#FFFFFF"
          font-size="14px"
          padding="20px 30px"
